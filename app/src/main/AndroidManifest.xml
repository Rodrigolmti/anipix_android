<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rodrigolmti.anipix">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.rodrigolmti.library.controller.app.AnipixApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.AnimeSearchActivity"
            android:theme="@style/AppThemeNoBar"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".view.activity.AnimeDetailActivity"
            android:theme="@style/AppThemeNoBar"/>
        <activity
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:name=".view.activity.PlayerActivity"/>

    </application>

</manifest>